    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-baseline">
        <% if current_user %>
          <li class="nav-item">
            <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-link nav-link p-0 me-3", form_class: "d-inline m-0 align-baseline" %>
          </li>
          <li class="nav-item">
            <%= link_to "Edit Profile", edit_user_path(current_user), class: "nav-link me-3" %>
