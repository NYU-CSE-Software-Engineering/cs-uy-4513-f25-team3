
<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_with model: @itinerary_group, url: itineraries_path, method: :post do |f| %>
  <div>
    <%= f.label :title, "title" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "description" %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :location, "location" %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :start_date, "start_date" %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date, "end_date" %>
    <%= f.date_field :end_date %>
  </div>

  <div>
    <%= f.label :is_private, "is_private" %>
    <%= f.select :is_private, [["Public", 'false'], ["Private", 'true']] %>
  </div>

  <div>
    <%= f.label :password, "password" %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :cost, "cost" %>
    <%= f.number_field :cost %>
  </div>

  <%= f.submit "Create" %>

<% end %>